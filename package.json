{
  "name": "voltura-service-hub-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @voltura/web",
    "dev:api": "npm run dev --workspace @voltura/api",
    "dev:worker": "npm run dev --workspace @voltura/worker",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspace @voltura/web",
    "postinstall": "npm run build --workspace @voltura/messaging"
  }
}
